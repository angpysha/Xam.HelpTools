<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xam.HelpTools.Demo.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin Forms and Prism!" />

        <Button Text="Test AsyncCommandEx"
                HorizontalOptions="FillAndExpand"
                Command="{Binding PressButtonCommand}"/>

        <Button Text="Test AsyncValueCommandEx"
                HorizontalOptions="FillAndExpand"
                Command="{Binding PressButtonValueCommand}"/>

        <Button Text="Test CommandEx"
                HorizontalOptions="FillAndExpand"
                Command="{Binding ButtonPressend2Command}"/>

        <Button Text="Change canExecute"
                HorizontalOptions="FillAndExpand"
                Command="{Binding ButtonCOmmand2}"/>
    </StackLayout>

</ContentPage>